#:kivy 2.0
# -*- coding: utf-8 -*-
<Gerenciador>:
    TelaInicial:
        name: 'tela_inicial'
    ConfiguracaoRotina:
        name: 'configuracao_rotina'
    TelaDeteccao:
        name: 'tela_deteccao'
    TelaFimExecucao:
        name: 'tela_fim_execucao'

<TelaInicial>:
    id: tela_inicial
    BoxLayout:
        orientation: 'vertical'
        padding: 64
        spacing: 50
        Label:
            text: "Detector de Fadiga"
            font: "Roboto"
            font_size: 36
            color: (0, 0, 0, 1)
        Button:
            text: "Iniciar rotina"
            on_release: app.gerenciador.mudaTela("configuracao_rotina")
        Button:
            text: "Fechar"
            on_release: app.stop()

<ConfiguracaoRotina>:
    id: configuracao_rotina
    BoxLayout:
        orientation: 'vertical'
        padding: 64
        spacing: 50
        FloatInput:
            id: tempo
        Button:
            text: "Modo Vigia"
        Button:
            text: "Modo Viagem"
        Button:
            text: "Voltar"
            on_release: app.gerenciador.mudaTela("tela_inicial")

<TelaDeteccao>:
    id: tela_deteccao


<TelaFimExecucao>:
    id: tela_fim_execucao

