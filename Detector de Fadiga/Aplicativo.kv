#:kivy 2.0
# -*- coding: utf-8 -*-
<Gerenciador>:
    TelaInicial:
        id: tela_inicial
        name: 'tela_inicial'
    ConfiguracaoRotina:
        id: configuracao_rotina
        name: 'configuracao_rotina'
    TelaDeteccao:
        id: tela_deteccao
        name: 'tela_deteccao'
    TelaFimExecucao:
        id: tela_fim_execucao
        name: 'tela_fim_execucao'

<TelaInicial>:
    id: tela_inicial
    BoxLayout:
        orientation: 'vertical'
        padding: 64
        spacing: 50
        CustomLabel:
            text: "Detector de Fadiga"
            font: "Roboto"
            font_size: 36
        Button:
            text: "Iniciar rotina"
            on_release: app.gerenciador.mudaTela("configuracao_rotina")
        Button:
            text: "Fechar"
            on_release: app.stop()

<ConfiguracaoRotina>:
    id: configuracao_rotina
    BoxLayout:
        orientation: 'vertical'
        padding: 64
        spacing: 50
        FloatInput:
            id: tempo
            text: app.tempo_execucao_digitado
            on_text: app.tempo_execucao_digitado = self.text
            multiline: False
        Button:
            text: "Modo Vigia"
            on_release: app.iniciarRotinaMonitoramento("VIGIA")
        Button:
            text: "Modo Viagem"
            on_release: app.iniciarRotinaMonitoramento("VIAGEM")
        Button:
            text: "Voltar"
            on_release: app.gerenciador.mudaTela("tela_inicial")

<TelaDeteccao>:
    id: tela_deteccao
    BoxLayout:
        orientation: 'vertical'
        padding: 64
        spacing: 10
        CustomLabel:
            text: "Hora atual: " + app.horario_atual
        CustomLabel:
            text: "Tempo restante: " + app.tempo_execucao_corrente
        BoxLayout:
            orientation: 'horizontal'
            Image:
                id: camera
                souce: "camera.jpg"
            CustomLabel:
                text: "Aqui havera a lista de eventos"
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: "Pausar"
                on_press: app.pausarRotina()
                on_release: root.dialogPausa()
            Button:
                text: "Terminar"
                on_press: app.encerrarRotina() 

<TelaFimExecucao>:
    id: tela_fim_execucao
    BoxLayout:
        orientation: 'vertical'
        padding: 64
        spacing: 10
        CustomLabel:
            text: "Hora atual: " + app.horario_atual
        CustomLabel:
            text: "Tempo restante: " + app.tempo_execucao_corrente
        CustomLabel:
            text: "Aqui havera a lista de eventos"
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: "Gerar PDF"
            Button:
                text: "Fechar programa"
                on_release: root.fecharPrograma()

